<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="me.arushi.scarnesdice.MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll"
        android:background="#04F7FF"
        android:id="@+id/roll"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold"
        android:background="#04F7FF"
        android:id="@+id/hold"
        android:layout_alignBottom="@+id/roll"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:background="#04F7FF"
        android:id="@+id/reset"
        android:layout_alignBottom="@+id/hold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dice"
        android:src="@drawable/dice3"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cpucur"
        android:textColor="#ff0"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/hold"
        android:layout_alignLeft="@+id/usercur"
        android:layout_alignStart="@+id/usercur" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usercur"
        android:textColor="#ff0"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/cpucur"
        android:layout_toRightOf="@+id/roll"
        android:layout_toEndOf="@+id/roll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cputotal"
        android:textColor="#ff0"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/usercur"
        android:layout_alignLeft="@+id/usercur"
        android:layout_alignStart="@+id/usercur" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usertotal"
        android:textColor="#ff0"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/cputotal"
        android:layout_alignStart="@+id/cputotal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPU Current Score"
        android:textColor="#ff0"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/cpucur"
        android:layout_alignRight="@+id/reset"
        android:layout_alignEnd="@+id/reset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Current Score"
        android:textColor="#ff0"
        android:id="@+id/textView2"
        android:layout_above="@+id/cputotal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cpu Total"
        android:textColor="#ff0"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/cputotal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Total"
        android:textColor="#ff0"
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />


</RelativeLayout>
